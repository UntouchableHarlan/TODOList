<p id="notice"><%= notice %></p>

<div class="container">
  <h1>To Do Item</h1>
</div>

<div>
  <p>
    <strong>Description:</strong>
    <%= @todo_item.description %>
  </p>
</div>


<p>
  <strong>Done:</strong>
  <%= @todo_item.done %>
</p>

<p>
  <strong>Due:</strong>
  <%= @todo_item.due %>
</p>

<%= link_to 'Edit', edit_todo_item_path(@todo_item), class: "btn btn-primary" %> 
<%= link_to 'Back', todo_items_path, class: "btn btn-warning" %>
